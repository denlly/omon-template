{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es7"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./client/*"]
        },
        "types": [
            "@nuxt/vue-app",
            "@types/node",
            "@types/webpack-env",
            "reflect-metadata"
        ]
    }
}
